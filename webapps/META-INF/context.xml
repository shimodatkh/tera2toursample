<!-- 
   - JNDI用プロパティの設定。
   - OracleとPostgreSQL環境用の設定を準備しているので、自端末の環境に合った方を利用する。
   - 【記述書式】を参考にして、自端末の環境に合った値に【設定例】を書き換える。
   - 
   - JNDIを使用しない場合は、「/webapps/WEB-INF/dataAccessContext-local.xml」の
   - データソースのBean定義を書き換える。
 -->
 <!-- 
   - 「データベースがOracleの場合の設定」
   - 【記述書式】
   - driverClassName=[ドライバ名称]
   - username=[データベースログイン名称]
   - password=[データベースログインパスワード]
   - url=jdbc:oracle:thin:@[データベースサーバIPアドレス]:[ポート番号]:[インスタンス名]
   - 【設定例】
 -->
<!--
<Context>
  <Resource
     name="jdbc/terasolunaTourDataSource"
     type="javax.sql.DataSource"
     driverClassName="oracle.jdbc.OracleDriver"
     password="sample"
     maxIdle="2"
	 maxWait="5000"
	 username="sample"
	 url="jdbc:oracle:thin:@127.0.0.1:1521:teradb"
	 maxActive="4"/>
</Context>
-->

<!-- 
   - 「データベースがPostgreSQLの場合の設定」
   - 【記述書式】
   - driverClassName=[ドライバ名称]
   - username=[データベースログイン名称]
   - password=[データベースログインパスワード]
   - url=jdbc:postgresql://[データベースサーバIPアドレス]:[ポート番号]/[データベース名称]
   - 【設定例】
 -->
<Context>
  <Resource
     name="jdbc/terasolunaTourDataSource"
     type="javax.sql.DataSource"
     driverClassName="org.postgresql.Driver"
     password="sample"
     maxIdle="2"
     maxWait="5000"
     username="sample"
     url="jdbc:postgresql://127.0.0.1:5432/teradb"
     maxActive="4"/>
</Context>

